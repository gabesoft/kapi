name:                kapi
version:             0.1.0.0
synopsis:            Rest api server
description:         Please see README.org
homepage:            https://github.com/gabesoft/kapi#readme
license:             BSD3
license-file:        LICENSE
author:              Gabriel Adomnicai
maintainer:          gabesoft@gmail.com
copyright:           2016 Gabriel Adomnicai
category:            Web
build-type:          Simple
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Types.Xandar
                     , Api.Xandar
                     , Doc.Xandar
                     , Handlers.Users.Xandar
  build-depends:       base >= 4.7 && < 5
                     , aeson >= 1.0.2
                     , servant >= 0.9
                     , servant-server
                     , servant-docs
                     , text >= 1.2
  default-language:    Haskell2010

executable kapi-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , kapi
                     , wai >= 3.2
                     , warp >= 3.2
  default-language:    Haskell2010

test-suite kapi-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , kapi
                     , QuickCheck >= 2.8
                     , quickcheck-text
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/gabesoft/kapi
